{% extends 'AppBundle::base.html.twig' %}

{% block body %}
    <h2>Einloggen</h2>

    <form action="{{ path('login_check') }}" method="post">
        <div class="item-overview">
            <div class="item">
                <h3>Hier k√∂nnen Sie sich mit Ihrer E-Mail Adresse und Ihrem Passwort anmelden.</h3>
                <br />
                <div class="specs">
                    <dl>
                        <dt class="label"><label for="username">E-Mail Adresse:</label></dt>
                        <dd><input type="text" id="username" name="_username" value="{{ lastUsername }}" /></dd>
                    </dl>

                    <dl>
                        <dt class="label"><label for="password">Passwort:</label></dt>
                        <dd><input type="password" id="password" name="_password" /></dd>
                    </dl>
                </div>

                {% if error %}
                    <div class="error">Falsche E-Mail Adresse oder falsches Passwort</div>
                {% endif %}

                <div class="options">
                    <button type="submit">login</button>
                </div>
            </div>
        </div>
    </form>
{% endblock %}